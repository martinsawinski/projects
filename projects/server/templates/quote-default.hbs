<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <style>{{{extra_css}}}
    body { font-family: ui-sans-serif, system-ui, -apple-system; }
    h1 { margin: 0; font-size: 22px }
    .muted { color: #6b7280; font-size: 12px }
    table { width: 100%; border-collapse: collapse }
    th, td { border-bottom: 1px solid #e5e7eb; padding: 8px; text-align: left }
    tfoot td { border-top: 2px solid #111827; font-weight: 600 }
  </style>
</head>
<body>
  <header>
    <h1>Quote {{quote.quote_number}}</h1>
    <div class="muted">Issue: {{quote.issue_date}} {{#if quote.valid_until}} · Valid until: {{quote.valid_until}}{{/if}}</div>
  </header>
  <section>
    <div><strong>Bill To:</strong> {{quote.name}} — {{quote.billing_address}}</div>
    <div class="muted">{{quote.email}} · {{quote.phone}}</div>
  </section>
  <table>
    <thead>
      <tr><th>Description</th><th>Qty</th><th>Unit</th><th>Rate</th><th>Line Disc</th><th>Amount</th></tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td>{{description}}</td>
        <td>{{quantity}}</td>
        <td>{{unit}}</td>
        <td>{{money unit_price_cents ../quote.currency}}</td>
        <td>{{money discount_cents ../quote.currency}}</td>
        <td>{{money amount_cents ../quote.currency}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if accept_url}}
    <p><a href="{{accept_url}}">Accept Quote</a></p>
  {{/if}}
</body>
</html>
